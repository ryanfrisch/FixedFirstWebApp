@{
    ViewBag.Title = "Grade Calculator";
}

@model FixedFirstWebApp.Models.GradeCalculatorModel

<body>
    <h2>Grade Calculator</h2>
    <div class="card">
        <p class="picDescrip">Please input the percent you received of each category below: </p>
        <form method="post">
            <label>Assignments:</label>
            <input id="Assignment" asp-for="Assignment" />
            <br />
            <label>Group Project: </label>
            <input id="GroupProject" asp-for="GroupProject" />
            <br />
            <label>Quizzes: </label>
            <input id="Quiz" asp-for="Quiz" />
            <br />
            <label>Exams: </label>
            <input id="Exam" asp-for="Exam"/>
            <br />
            <label>Intex: </label>
            <input id="Intex" asp-for="Intex"/>
            <br />
            <br />
            <input type="submit" value="Calculate" id="submitButton" />
            <div asp-validation-summary="All"></div>
        </form>
        <!-- This is where the grade message will be populated by the javascript when the submit button is pressed -->
        <p id="gradeMessage"></p>
    </div>
</body>